<Window
    x:Class="UIAutomationTestKit.Views.AboutAppView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UIAutomationTestKit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:UIAutomationTestKit.ViewModels"
    Title="About App"
    Width="550"
    Height="400"
    d:DataContext="{d:DesignInstance viewModels:UserRegistrationViewModel}"
    AutomationProperties.AutomationId="AboutAppView"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Name="DialogMessage"
            Grid.Row="0"
            Grid.Column="0"
            Margin="25">

            <StackPanel>
                <TextBlock
                    FontSize="18"
                    FontWeight="DemiBold"
                    Text="About" />
                <TextBlock
                    Margin="0,5"
                    FontWeight="DemiBold"
                    Text="UI Automation Test Kit — an interactive educational platform for testers and developers in the field of test automation."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="0,15,0,0"
                    Text="The application is designed to master practical skills in UI test automation, including:"
                    TextWrapping="Wrap" />
                <TextBlock Margin="5" Text="• Testing desktop applications" />
                <TextBlock Margin="5" Text="• Working with various control elements" />
                <TextBlock Margin="5" Text="• Creating automated test scenarios" />
                <TextBlock Margin="5,5,5,20" Text="• Mastering Page Object Model patterns and other best practices" />
                <TextBlock Text="Version: 2.1.0" />
                <TextBlock Text="Build: 2025.09.12" />
                <TextBlock Text="© cetris6pb, 2025" />
                <TextBlock Text="All rights reserved." />

                <Button
                    Width="80"
                    Height="40"
                    Margin="0,20"
                    AutomationProperties.AutomationId="AboutAppOkButton"
                    Command="{Binding AboutAppWindowCloseCommand}"
                    Content="OK" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
